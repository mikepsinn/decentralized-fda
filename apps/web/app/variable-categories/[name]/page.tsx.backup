import { Metadata } from 'next'
import { notFound } from 'next/navigation'
import Link from 'next/link'
import { prisma } from '@repo/database'
import { slugToName, nameToSlug } from '@/lib/slugs'

interface VariableCategoryPageProps {
  params: {
    name: string
  }
}

async function getVariableCategory(nameSlug: string) {
  // Convert slug to name (e.g., "Overall_Mood" -> "Overall Mood")
  const name = slugToName(decodeURIComponent(nameSlug))

  const category = await prisma.variable_categories.findFirst({
    where: {
      name: name,
      deleted_at: null,
    },
  })

  if (!category) {
    return null
  }

  // Get variables in this category
  const variables = await prisma.variables.findMany({
    where: {
      variable_category_id: category.id,
      deleted_at: null,
      is_public: true,
      number_of_user_variables: {
        gt: 2,
      },
      number_of_raw_measurements_with_tags_joins_children: {
        gt: 5,
      },
      OR: [
        {
          number_of_aggregate_correlations_as_cause: {
            gt: 0,
          },
        },
        {
          number_of_aggregate_correlations_as_effect: {
            gt: 0,
          },
        },
      ],
    },
    orderBy: [
      {
        number_of_user_variables: 'desc',
      },
    ],
    take: 100,
  })

  // Sort by total correlations
  const sortedVariables = variables.sort((a, b) => {
    const aTotal = (a.number_of_aggregate_correlations_as_cause || 0) + (a.number_of_aggregate_correlations_as_effect || 0)
    const bTotal = (b.number_of_aggregate_correlations_as_cause || 0) + (b.number_of_aggregate_correlations_as_effect || 0)
    return bTotal - aTotal
  })

  return { category, variables: sortedVariables }
}

export async function generateMetadata({ params }: VariableCategoryPageProps): Promise<Metadata> {
  try {
    const data = await getVariableCategory(params.name)

    if (!data) {
      return {
        title: 'Category Not Found',
        description: 'The requested variable category could not be found.',
      }
    }

    return {
      title: `${data.category.name} Variables | DFDA`,
      description: `Browse ${data.category.name} variables and their correlations`,
    }
  } catch (error) {
    return {
      title: 'Category Not Found',
      description: 'The requested variable category could not be found.',
    }
  }
}

export default async function VariableCategoryPage({ params }: VariableCategoryPageProps) {
  const data = await getVariableCategory(params.name)

  if (!data) {
    notFound()
  }

  const { category, variables } = data

  return (
    <div className="container mx-auto px-4 py-8">
      {/* Header */}
      <div className="mb-8 p-6 bg-white border-4 border-black rounded-lg shadow-[8px_8px_0px_0px_rgba(0,0,0,1)]">
        <div className="flex items-start gap-6">
          {category.image_url && (
            <img
              src={category.image_url}
              alt={category.name}
              className="w-24 h-24 object-cover border-4 border-black rounded-lg"
            />
          )}
          <div className="flex-1">
            <h1 className="text-4xl font-black mb-3">{category.name}</h1>
            <div className="grid grid-cols-2 md:grid-cols-4 gap-3">
              {category.number_of_variables && (
                <div className="px-3 py-2 bg-blue-100 border-2 border-black rounded">
                  <div className="text-xs font-bold text-gray-600">VARIABLES</div>
                  <div className="text-2xl font-black">
                    {category.number_of_variables.toLocaleString()}
                  </div>
                </div>
              )}
              {category.number_of_user_variables && (
                <div className="px-3 py-2 bg-green-100 border-2 border-black rounded">
                  <div className="text-xs font-bold text-gray-600">USER VARS</div>
                  <div className="text-2xl font-black">
                    {category.number_of_user_variables.toLocaleString()}
                  </div>
                </div>
              )}
              {category.number_of_measurements && (
                <div className="px-3 py-2 bg-yellow-100 border-2 border-black rounded">
                  <div className="text-xs font-bold text-gray-600">MEASUREMENTS</div>
                  <div className="text-2xl font-black">
                    {category.number_of_measurements.toLocaleString()}
                  </div>
                </div>
              )}
              {(category.number_of_outcome_population_studies || category.number_of_predictor_population_studies) && (
                <div className="px-3 py-2 bg-purple-100 border-2 border-black rounded">
                  <div className="text-xs font-bold text-gray-600">STUDIES</div>
                  <div className="text-2xl font-black">
                    {((category.number_of_outcome_population_studies || 0) +
                      (category.number_of_predictor_population_studies || 0)).toLocaleString()}
                  </div>
                </div>
              )}
            </div>
          </div>
        </div>
      </div>

      {/* Variables List */}
      <div className="mb-4">
        <h2 className="text-2xl font-black mb-4">
          Top Variables in {category.name}
        </h2>
      </div>

      <div className="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
        {variables.map((variable) => {
          const totalCorrelations = (variable.number_of_aggregate_correlations_as_cause || 0) + (variable.number_of_aggregate_correlations_as_effect || 0)

          return (
            <Link
              key={variable.id}
              href={`/variables/${nameToSlug(variable.name)}`}
              className="block p-4 bg-white border-2 border-black rounded-lg hover:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transition-shadow"
            >
              <div className="flex items-start gap-3">
                {variable.image_url && (
                  <img
                    src={variable.image_url}
                    alt={variable.name}
                    className="w-12 h-12 object-cover border-2 border-black rounded"
                  />
                )}
                <div className="flex-1 min-w-0">
                  <h3 className="font-bold mb-1 truncate">{variable.name}</h3>
                  <div className="grid grid-cols-2 gap-1 text-xs">
                    <div>
                      <strong>Users:</strong> {variable.number_of_user_variables?.toLocaleString()}
                    </div>
                    <div>
                      <strong>Correlations:</strong> {totalCorrelations.toLocaleString()}
                    </div>
                  </div>
                </div>
              </div>
            </Link>
          )
        })}
      </div>

      {variables.length === 0 && (
        <div className="text-center py-12 text-gray-500">
          <p className="text-xl">No variables found in this category</p>
        </div>
      )}
    </div>
  )
}
