  },
  "dependencies": {
    "keycloak-connect": "^22.0.0",
    "keycloak-js": "^22.0.0",
    "@gravitee/sdk": "^1.0.0",
    "axios": "^1.6.7",
    "dotenv": "^16.4.5"
